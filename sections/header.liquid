<style>
  /* ACTIVE state (summary text color) */
  .header_group_section{
    display:block;
    padding:0 20px;
    border-bottom:1px solid #e9e9e9;
  }
  
  .dropdown-active {
    color: var(--color-accent, #000);
  }
  .nav-item{
    padding:20px 10px;
    align-content:center;
  }
  .dropdown{
    padding:20px 10px;
  }
  /* caret icon rotation */
  menu-drop summary svg {
    transition: transform 0.25s ease;
  }

  menu-drop[open] summary svg {
    transform: rotate(180deg);
  }

  /* container must NOT have padding */
  .nav-item {
    padding: 0;
    margin: 0 10px;
    position: relative;
  }

  /* dropdown panel */
  .dropdown-panel {
    position: absolute;
    top: 100%;       /* sits RIGHT under the summary */
    left: 0;
    opacity: 1;
    pointer-events: none;
    transform: translateY(0);
    transition: opacity .25s ease;

    background: white;
    padding: 20px;
    min-width: 300px;
    border-radius: 5px;
    z-index: 999;
  }

  ul.nav-list.nav-inline {
    display: flex;
    list-style: none;
  }

  li.nav-item {
    margin: 0 10px;
  }
   menu-drop[open] .dropdown-panel {
    opacity: 0;
    transform: translateY(12px);
    pointer-events: none;
    transition: opacity .25s ease, transform .25s ease;
  }

  .panel-open {
    opacity: 1;
    transform: translateY(0);
    pointer-events: auto;
  }
  .dropdown ul {
   list-style: none;

    padding: 0;
  }
  ul.dropdown-grid.container-width {
    display: flex;
    justify-content: space-around;
}
</style>
<header>
  <a href="{{ routes.root_url }}" class="header_logo_link">
    {% if section.settings.logo != blank %}
      <div class="header_logo_wrapper">
        {% assign img_alt = section.settings.img_alt | default: shop.name | escape %}
        {%- assign logo_height = section.settings.logo_width | divided_by: settings.logo.aspect_ratio -%}
        {{
          section.settings.logo
          | image_url: width: 600
          | image_tag:
            class: 'header__heading-logo motion-reduce',
            height: logo_height,
            width: section.settings.logo_width,
            alt: img_alt,
            preload: true
        }}
      </div>
    {% else %}
      <h2 class="header__title">
        {{ shop.name | link_to: routes.root_url }}
      </h2>
    {% endif %}
  </a>

  <div class="header__menu">
    {% if section.settings.main_menu != blank %}
      {% if section.settings.main_menu_type == 'mega-menu' %}
        {% render 'mega-menu' %}
      {% endif %}
    {% endif %}
  </div>

  <div class="header__icons">
    {% if shop.customer_accounts_enabled %}
      {{ 'icon-account.svg' | inline_asset_content | link_to: routes.account_url }}
    {% endif %}

    <a href="{{ routes.cart_url }}">
      {% if cart.item_count > 0 %}
        <sup>{{ cart.item_count }}</sup>
      {% endif %}

      {{ 'icon-cart.svg' | inline_asset_content }}
    </a>
  </div>
</header>
<script src="{{ 'nav-menu.js' | asset_url }}" defer></script>
{% stylesheet %}
  header {
    height: 5rem;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }
  header a {
    position: relative;
    text-decoration: none;
    color: var(--color-foreground);
  }
  header a sup {
    position: absolute;
    left: 100%;
    overflow: hidden;
    max-width: var(--page-margin);
  }
  header svg {
    width: 2rem;
  }
  header .header__menu,
  header .header__icons {
    display: flex;
    gap: 1rem;
  }
{% endstylesheet %}

{% schema %}
{
  "name": "t:general.header",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo"
    },
    {
      "type": "text",
      "id": "img_alt",
      "label": "Alt",
      "default": "Image"
    },
    {
      "type": "range",
      "id": "logo_width",
      "label": "Logo Width",
      "min": 20,
      "max": 200,
      "step": 10,
      "default": 20
    },
    {
      "type": "link_list",
      "id": "main_menu",
      "label": "t:labels.menu"
    },
    {
      "type": "select",
      "id": "main_menu_type",
      "label": "Menu Type",
      "options": [
        {
          "label": "Mega Menu",
          "value": "mega-menu"
        },
        {
          "label": "Dropdown",
          "value": "dropdown"
        },
        {
          "label": "Drawer",
          "value": "drawer"
        }
      ]
    }
  ],
  "class": "header_group_section"
}
{% endschema %}
